<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="./css/product-grid.css">
    <% include common/head %>
</head>

<body>
    <% include fixedHeader %>

    <div class="backgroundProduct">
        <h1 class="page-title">Products</h1>

    </div>



    <section class="productGrid">
        <div class="container">
            <div class="row">
                <div class="col-md-3 menuSection">
                    <div class="col-md-12">
                        <p class="menu_Header">Product Infomation</p>
                        <ul class="menu_Wrapper">
                            <% for(var items of itemList) { %>
                            <li class="menu_Items">
                                <a href="" class="menuItems_Links">
                                    <%= items.name %></a>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100 image-slider-one" src="http://klbtheme.com/qualis/wp-content/uploads/2018/12/slide3.jpg"
                                        alt="First slide">
                                    <h1 class="carousel-header">Black Grapes</h1>
                                    <h2 class="carousel-discount">Mega Sale</h2>
                                    <p class="carousel-content">Lorem ipsum dolor sit amet, consectetur adipiscing
                                        elit.</p>
                                    <a href="" class="carousel-link">Buy Now</a>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100 image-slider-one" src="http://klbtheme.com/qualis/wp-content/uploads/2018/12/slide2.jpg"
                                        alt="Second slide">
                                    <h1 class="carousel-header">Black Grapes</h1>
                                    <h2 class="carousel-discount">Mega Sale</h2>
                                    <p class="carousel-content">Lorem ipsum dolor sit amet, consectetur adipiscing
                                        elit.</p>
                                    <a href="" class="carousel-link">Buy Now</a>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100 image-slider-one" src="http://klbtheme.com/qualis/wp-content/uploads/2018/12/slide1.jpg"
                                        alt="Third slide">
                                    <h1 class="carousel-header">Black Grapes</h1>
                                    <h2 class="carousel-discount">Mega Sale</h2>
                                    <p class="carousel-content">Lorem ipsum dolor sit amet, consectetur adipiscing
                                        elit.</p>
                                    <a href="" class="carousel-link">Buy Now</a>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon carousel-icon-one" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon carousel-icon-one" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="col-md-12">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="http://klbtheme.com/qualis/wp-content/uploads/2018/12/category-img1.jpg"
                                        alt="First slide">
                                    <div class="slider-wrapper">
                                        <h3 class="slider-tag">Green World</h3>
                                        <h2 class="slider-header">Vegetable Sale </h2>
                                        <p class="slider-discount">Save 70% on all items</p>
                                    </div>

                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="http://klbtheme.com/qualis/wp-content/uploads/2018/12/category-img2.jpg"
                                        alt="Second slide">
                                    <div class="slider-wrapper">
                                        <h3 class="slider-tag">Green World</h3>
                                        <h2 class="slider-header">Vegetable Sale </h2>
                                        <p class="slider-discount">Save 70% on all items</p>
                                    </div>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-12 pGridSection">

                        <% for(var products of productList) { %>
                        <div class="col-md-4 product-wrapper">
                            <a href="">
                                <img src="<%= products.image %>" class="product-image"></img>
                            </a>
                            <div class="product-name">
                                <%= products.name %>
                            </div>
                            <div class="product-price">
                                <%= products.price %>
                            </div>
                            <a href="#" data-name="<%= products.name %>" data-price="<%= products.price %>" class="add-to-cart btn btn-primary">Add
                                to cart</a>
                        </div>
                        <% } %>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <% include common/bottom %>

</body>